<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Colors -->
    <Color x:Key="NeonBlueColor">#56b0ff</Color>
    <Color x:Key="NeonCyanColor">#00ffff</Color>
    <Color x:Key="GlassBackgroundColor">#1a1a2e</Color>
    <Color x:Key="GlassSurfaceColor">#16213e</Color>
    <Color x:Key="TextPrimaryColor">#ffffff</Color>
    <Color x:Key="TextSecondaryColor">#b0b0b0</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="NeonBlueBrush" Color="{StaticResource NeonBlueColor}"/>
    <SolidColorBrush x:Key="NeonCyanBrush" Color="{StaticResource NeonCyanColor}"/>
    <SolidColorBrush x:Key="GlassBackgroundBrush" Color="{StaticResource GlassBackgroundColor}"/>
    <SolidColorBrush x:Key="GlassSurfaceBrush" Color="{StaticResource GlassSurfaceColor}" Opacity="0.8"/>
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>

    <!-- Gradients -->
    <LinearGradientBrush x:Key="NeonGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#56b0ff" Offset="0.0"/>
        <GradientStop Color="#00ffff" Offset="1.0"/>
    </LinearGradientBrush>

    <!-- Card Style (Glassmorphism) -->
    <Style x:Key="GlassCard" TargetType="Border">
        <Setter Property="Background" Value="#252540"/>
        <Setter Property="CornerRadius" Value="15"/>
        <Setter Property="Padding" Value="20"/>
        <Setter Property="BorderBrush" Value="#3a3a5e"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.3" Color="Black"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Neon Button Style -->
    <Style x:Key="NeonButton" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="BorderBrush" Value="{StaticResource NeonBlueBrush}"/>
        <Setter Property="Padding" Value="20,10"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border" 
                            CornerRadius="8" 
                            Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource NeonBlueBrush}"/>
                            <Setter TargetName="border" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect Color="{StaticResource NeonBlueColor}" BlurRadius="15" ShadowDepth="0"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                         <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Text Styles -->
    <Style x:Key="Header1" TargetType="TextBlock">
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="Margin" Value="0,0,0,10"/>
    </Style>

</ResourceDictionary>
